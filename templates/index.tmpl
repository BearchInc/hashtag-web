<!DOCTYPE html>
<html ng-app="Hashtag">
<head>
  <title>Hashtag</title>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width"/>

  <link rel="stylesheet" href="/public/dist/{{.AppCss}}"/>

  <script type="text/javascript">
    var HOST = 'http://localhost:8080';
  </script>

  <script type="text/javascript" src="/public/dist/{{.AppLibsJs}}"></script>
  <script type="text/javascript" src="/public/dist/{{.AppJs}}"></script>
  <script type="text/javascript" src="/public/dist/{{.AppViewsJs}}"></script>
</head>
<body>

  <header class="navbar navbar-default">
    <a href="/" class="navbar-brand">Hashtag</a>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li>
          <a ui-sref="posts">Posts</a>
        </li>
        <li ng-if="currentAccount.isAdmin()">
          <a ui-sref="accounts_new">Accounts</a>
        </li>
      </ul>
    </div>
  </header>

  <div flash-message="5000"></div>

  <main ui-view="body"></main>
</body>
</html>
